<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>State</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.age %></td>
        <td><%= contact.state %></td>
        <td><%= contact.position %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Destroy',
                        contact,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-sm btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Contact', new_contact_path, class: "btn btn-md btn-primary" %>
