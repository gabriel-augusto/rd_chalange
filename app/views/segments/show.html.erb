<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @segment.title %>
</p>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Age</th>
    <th>State</th>
    <th>Position</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @segment.contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.age %></td>
        <td><%= contact.state %></td>
        <td><%= contact.position %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-md btn-default" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-md btn-default" %></td>
        <td><%= link_to 'Delete',
                        contact,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-md btn-danger" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_segment_path(@segment), class: "btn btn-md btn-default" %> |
<%= link_to 'Back', segments_path, class: "btn btn-md btn-default" %>
