<p id="notice"><%= notice %></p>

<h1>Listing Segments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.title %></td>
        <td><%= link_to 'Show', segment, class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Edit', edit_segment_path(segment), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Delete',
                        segment,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Segment', new_segment_path, class: "btn btn-md btn-default" %>
